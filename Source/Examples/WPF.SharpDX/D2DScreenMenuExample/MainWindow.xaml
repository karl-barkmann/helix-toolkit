<Window x:Class="D2DScreenMenuExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:hx="http://helix-toolkit.org/wpf/SharpDX"
        xmlns:hx2D="clr-namespace:HelixToolkit.Wpf.SharpDX.Elements2D;assembly=HelixToolkit.Wpf.SharpDX"
        xmlns:local="clr-namespace:D2DScreenMenuExample"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="600"
        Height="600"
        Background="Black"
        mc:Ignorable="d">
    <Grid>
        <hx:Viewport3DX Camera="{Binding Camera}"
                        EffectsManager="{Binding EffectsManager}"
                        EnableSwapChainRendering="False">
            <hx:DirectionalLight3D Direction="{Binding VM3D.Light1Direction}" Color="{Binding VM3D.Light1Color}" />
            <hx:DirectionalLight3D Direction="{Binding VM3D.Light2Direction}" Color="{Binding VM3D.Light2Color}" />
            <hx:DirectionalLight3D Direction="{Binding VM3D.Light3Direction}" Color="{Binding VM3D.Light3Color}" />
            <hx:MeshGeometryModel3D CullMode="Back"
                                    Geometry="{Binding VM3D.Model}"
                                    Material="{Binding VM3D.ModelMaterial}" />
            <hx:Viewport3DX.Content2D>
                <hx2D:Panel2D>
                    <hx2D:StackPanel2D Orientation="Vertical">
                        <hx2D:StackPanel2D Margin="10,20"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top">
                            <hx2D:TextModel2D HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Text="{Binding VM2D.Text}" />
                            <hx2D:TextModel2D HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              Text="{Binding VM2D.Text}" />
                            <hx2D:TextModel2D HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Text="{Binding VM2D.Text}" />
                            <hx2D:TextModel2D HorizontalAlignment="Right"
                                              VerticalAlignment="Bottom"
                                              FontSize="60"
                                              FontStyle="Italic"
                                              FontWeight="Bold"
                                              Text="{Binding VM2D.Text}" />
                            <hx2D:Button2D Margin="10" VerticalAlignment="Center">Button 1</hx2D:Button2D>
                            <hx2D:Button2D Margin="10" VerticalAlignment="Center">Button 2</hx2D:Button2D>
                        </hx2D:StackPanel2D>
                        <hx2D:StackPanel2D Margin="10"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Top"
                                           Orientation="Vertical">
                            <hx2D:StackPanel2D VerticalAlignment="Center" Orientation="Horizontal">
                                <hx2D:Button2D Width="60"
                                               Height="30"
                                               Margin="10"
                                               VerticalAlignment="Center">
                                    Button 3
                                </hx2D:Button2D>
                                <hx2D:Button2D Width="60"
                                               Height="30"
                                               Margin="10"
                                               VerticalAlignment="Center">
                                    Button 4
                                </hx2D:Button2D>
                            </hx2D:StackPanel2D>
                            <hx2D:Button2D Margin="10" HorizontalAlignment="Center" Clicked2D="Button2D_Clicked2D">Button4</hx2D:Button2D>
                            <hx2D:Button2D Margin="10" HorizontalAlignment="Center" Clicked2D="Button2D_Clicked2D_1" >Button5</hx2D:Button2D>
                            <hx2D:EllipseModel2D Width="20"
                                                 Height="20"
                                                 Fill="AliceBlue"
                                                 Stroke="Red"
                                                 StrokeThickness="1" />
                        </hx2D:StackPanel2D>
                    </hx2D:StackPanel2D>

                    <hx2D:EllipseModel2D Width="20"
                                         Height="20"
                                         Fill="Green"
                                         Stroke="Red"
                                         StrokeThickness="2" />
                    <hx2D:ImageModel2D Width="100"
                                       Height="100"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       ImageStream="{Binding VM2D.ImageStream}"
                                       Visibility="Collapsed" />

                    <hx2D:MultiSegmentModel2D Width="300"
                                              Height="300"
                                              Margin="0"
                                              AnimationDuration="0:0:10"
                                              AnimationInterval="0:0:2"
                                              EnableAnimation="True"
                                              Fill="Green"
                                              SegmentAngle="10"
                                              SegmentNum="20"
                                              Stroke="Red"
                                              StrokeThickness="22" />

                    <hx2D:Path2D x:Name="target"
                                 Width="200"
                                 Height="200"
                                 StrokeThickness="15"
                                 Fill="Transparent"
                                 Stroke="Green">
                        <hx2D:Path2D.Data>
                            <PathGeometry>
                                <PathGeometry.Figures>
                                    <PathFigureCollection>
                                        <PathFigure StartPoint="10,100">
                                            <PathFigure.Segments>
                                                <PathSegmentCollection>
                                                    <ArcSegment IsLargeArc="True"
                                                                Point="175,100"
                                                                RotationAngle="45"
                                                                Size="80,80"
                                                                SweepDirection="CounterClockwise" />
                                                </PathSegmentCollection>
                                            </PathFigure.Segments>
                                        </PathFigure>
                                    </PathFigureCollection>
                                </PathGeometry.Figures>
                            </PathGeometry>
                        </hx2D:Path2D.Data>
                        <hx2D:Path2D.Transform>
                            <RotateTransform x:Name="rotate" Angle="0" />
                        </hx2D:Path2D.Transform>
                    </hx2D:Path2D>
                </hx2D:Panel2D>
            </hx:Viewport3DX.Content2D>
        </hx:Viewport3DX>
    </Grid>
</Window>
